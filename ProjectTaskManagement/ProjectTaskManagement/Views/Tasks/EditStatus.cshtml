@model ProjectTaskManagement.Models.DataAccess.Entity.Task
@{
    ViewBag.Title = "EditStatus";
}


@using (Html.BeginForm("EditStatus", "Tasks", FormMethod.Post))
{
    <h2>EditStatus</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TaskId)

    <div class="form-group">
        @Html.LabelFor(model => model.Status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(s => s.Status, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>
 
    <button type="submit" class="btn btn-primary ml-3">Kaydet</button>
}


